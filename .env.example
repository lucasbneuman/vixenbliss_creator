# VIXENBLISS - Unified Configuration Example
# Copy this to .env and fill in your actual values
# ⚠️ NEVER commit .env to git

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://vixenbliss:vixenbliss_dev_pass@db:5432/vixenbliss
POSTGRES_USER=vixenbliss
POSTGRES_PASSWORD=vixenbliss_dev_pass
POSTGRES_DB=vixenbliss
REDIS_URL=redis://redis:6379

# Testing (SQLite for fast tests without real DB)
TEST_DATABASE_URL=sqlite:///./test.db

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-at-least-32-chars
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production-at-least-32-chars
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# CLOUDFLARE R2 (Storage) - REQUIRED for avatar creation
# =============================================================================
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=vixenbliss-content
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-custom-domain.com

# =============================================================================
# AI PROVIDERS - Image Generation (Sistema 1: Avatar/Face Gen)
# =============================================================================
# Provider routing order: choose one as primary, others as fallback
# Options: modal_sdxl_lora, replicate_sdxl, leonardo, dall_e_3

# Modal SDXL LoRA (fastest, requires setup)
MODAL_ENDPOINT_URL=
MODAL_API_TOKEN=
MODAL_API_KEY=
MODAL_TIMEOUT_SECONDS=300

# Replicate (easiest to set up)
REPLICATE_API_TOKEN=

# Leonardo AI
LEONARDO_API_KEY=

# OpenAI DALL-E 3 (fallback)
OPENAI_API_KEY=

# Provider selection
AI_IMAGE_PROVIDER=replicate
FACE_PROVIDER_ORDER=replicate_sdxl,leonardo,dall_e_3

# =============================================================================
# PAYMENTS (Sistema 4: Monetization)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# =============================================================================
# SOCIAL INTEGRATION (Sistema 3: Distribution)
# =============================================================================
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
INSTAGRAM_ACCESS_TOKEN=

TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# =============================================================================
# LLM & OBSERVABILITY
# =============================================================================
ANTHROPIC_API_KEY=
LANGFUSE_PUBLIC_KEY=pk-lf-
LANGFUSE_SECRET_KEY=sk-lf-
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=True

# Run production smoke tests (set to 'true' to enable; requires real API creds)
RUN_PRODUCTION_TESTS=false
